<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:id="@+id/rhcbwgq6ude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/gray_rectanglewith_shape">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/rd8dn5vxkte"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:layout_marginBottom="11dp"
                android:layout_marginStart="17dp"
                android:layout_marginEnd="30dp"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/rzgqcekwv6zi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="4dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="49dp"
                    android:layout_marginStart="3dp"
                    android:layout_marginEnd="45dp"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/racdlwdwb7l"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginBottom="23dp"
                        android:src="@drawable/button_arrow"
                        android:scaleType="fitXY"
                        />
                    <TextView
                        android:id="@+id/rkafvn9oy0z"
                        android:textColor="#171717"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="23dp"
                        android:layout_marginStart="1dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Cloud Kitchen Order"
                        />
                    <TextView
                        android:id="@+id/rural7f1ui5o"
                        android:textColor="#737373"
                        android:textSize="11sp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Send your meal plan to our partner kitchen"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ry0wbxpgip1o"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:paddingTop="48dp"
                    android:paddingBottom="53dp"
                    android:layout_marginBottom="290dp"
                    android:layout_marginHorizontal="24dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/r7r1icmrdres"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/green_cricle"
                        android:padding="12dp"
                        android:layout_marginBottom="31dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:orientation="vertical">

                        <ProgressBar
                            android:id="@+id/progress"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:indeterminate="true"
                            android:indeterminateTint="@color/green"
                            />

                    </LinearLayout>
                    <TextView
                        android:id="@+id/r1q4a415dri4"
                        android:textColor="#171717"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="20dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Preparing Your Meals"
                        />
                    <TextView
                        android:id="@+id/rhl9ce4bjpk"
                        android:textColor="#737373"
                        android:textSize="13sp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Our kitchen is working on your order"
                        />
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</LinearLayout>